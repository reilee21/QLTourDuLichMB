<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#ffffff" /> <!-- Màu nền của CardView -->
            <corners android:radius="8dp" /> <!-- Độ cong viền của CardView -->
            <padding android:left="8dp" android:top="8dp" android:right="8dp" android:bottom="8dp" /> <!-- Padding của CardView -->
            <stroke
                android:width="2dp"
                android:color="#BDBDBD" /> <!-- Màu viền CardView -->
            <corners android:radius="8dp" /> <!-- Độ cong viền -->
        </shape>
    </item>
</selector>